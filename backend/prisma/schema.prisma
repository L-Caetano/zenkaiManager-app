
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tournament {
  id        Int      @id @default(autoincrement())
  name      String
  timer     Int      @default(0)
  rodadas   Int      @default(1)
  playOff   Int?
  createdAt DateTime @default(now())

  players Player[] @relation("TournamentPlayers")
  rounds  Round[]
}

model Round {
  id           Int      @id @default(autoincrement())
  number       Int
  finished     Boolean  @default(false)
  createdAt    DateTime @default(now())
  type         RoundType @default(SWISS)
  tournamentId Int
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  matches Match[]

  @@unique([tournamentId, number])
}

model Match {
  id        Int      @id @default(autoincrement())
  roundId   Int
  playerAId Int
  playerBId Int
  scoreA    Int?     @default(0)
  scoreB    Int?     @default(0)
  finished  Boolean  @default(false)
  createdAt DateTime @default(now())

  round   Round @relation(fields: [roundId], references: [id])

  playerA Player @relation("PlayerA", fields: [playerAId], references: [id])
  playerB Player @relation("PlayerB", fields: [playerBId], references: [id])

  @@unique([roundId, playerAId, playerBId])
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  pts       Int      @default(0)
  createdAt DateTime @default(now())
  eliminated Boolean @default(false)
  tournaments Tournament[] @relation("TournamentPlayers")

  matchesA Match[] @relation("PlayerA")
  matchesB Match[] @relation("PlayerB")
}
enum RoundType {
  SWISS
  PLAYOFF
}
